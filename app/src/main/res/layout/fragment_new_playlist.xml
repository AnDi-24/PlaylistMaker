<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.practicum.playlistmaker.media.ui.NewPlaylistFragment">

    <ImageView
        android:id="@+id/topBar"
        style="@style/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/new_playlist_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="@string/new_playlist"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        style="@style/ImageSettings"
        android:id="@+id/back_button"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@null"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        android:foreground="?attr/selectableItemBackground"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/album_pic"
                android:layout_width="312dp"
                android:layout_height="312dp"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/album_pic"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                />

            <EditText
                style="@style/EditTextFont"
                android:id="@+id/input_title"
                android:hint="@string/title"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_pic"/>

            <TextView
                style="@style/mini_hint"
                android:id="@+id/title_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название*"
                app:layout_constraintTop_toTopOf="@id/input_title"
                app:layout_constraintBottom_toTopOf="@id/input_title"
                app:layout_constraintStart_toStartOf="@id/input_title"
                android:layout_marginStart="@dimen/sixteen_layout"
                android:background="@drawable/mini_frame"
                android:visibility="gone"/>

            <EditText
                style="@style/EditTextFont"
                android:id="@+id/input_description"
                android:hint="@string/description"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:layout_marginTop="104dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_pic"/>

            <TextView
                style="@style/mini_hint"
                android:id="@+id/description_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание"
                app:layout_constraintTop_toTopOf="@id/input_description"
                app:layout_constraintBottom_toTopOf="@id/input_description"
                app:layout_constraintStart_toStartOf="@id/input_description"
                android:layout_marginStart="@dimen/sixteen_layout"
                android:background="@drawable/mini_frame"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="16sp"
                android:letterSpacing="0"
                app:backgroundTint="@color/create_new_playlist"
                android:background="@drawable/create_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/create"
                android:layout_width="326dp"
                android:layout_height="44dp"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintTop_toBottomOf="@id/input_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:enabled="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>