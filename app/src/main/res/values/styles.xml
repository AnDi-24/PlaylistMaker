<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_layout</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/icon_black</item>
        <item name="cornerRadius">@dimen/sixteen_layout</item>
    </style>
    
    <style name="TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="tabTextColor">@color/icon_black</item>
        <item name="tabIndicatorColor">@color/icon_black</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="FrameSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/bg_blue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SwitchSettings" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:checked">false</item>
        <item name="thumbTint">@color/grey</item>
        <item name="trackTint">@color/track_white</item>
    </style>

    <style name="TextEditSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_layout</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:hint">@string/button_search</item>
        <item name="hintTextColor">@color/bg_blue</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textCursorDrawable">@drawable/cursor_search</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>

    <style name="SearchIc">
        <item name="android:layout_width">@dimen/sixteen_layout</item>
        <item name="android:layout_height">@dimen/sixteen_layout</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:src">@drawable/search</item>
        <item name="android:tint">@color/grey</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="YSFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/blackest</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="rvTimeArtistFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="bg">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bgPlayer">
        <item name="android:background">@color/white</item>
    </style>

    <style name="showMessage">
        <item name="android:layout_marginTop">@dimen/show_message_top</item>
        <item name="android:layout_width">@dimen/show_message_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="topBar">
        <item name="background">@color/white</item>
    </style>

    <style name="fontPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size_13</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_day</item>
        <item name="itemTextColor">@color/bottom_nav_day</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dp_12</item>
    </style>



</resources>