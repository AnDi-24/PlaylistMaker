<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_layout</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/icon_black</item>
        <item name="cornerRadius">@dimen/sixteen_layout</item>
    </style>
    
    <style name="TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/icon_end</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="FrameSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SwitchSettings" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:checked">false</item>
        <item name="android:thumbTint">@color/grey</item>
        <item name="android:trackTint">@color/track_white</item>
    </style>

    <style name="TextEditSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">@dimen/sixteen_layout</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_layout</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:hint">@string/button_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textCursorDrawable">@drawable/cursor_search</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>

    <style name="SearchIc">
        <item name="android:layout_width">@dimen/sixteen_layout</item>
        <item name="android:layout_height">@dimen/sixteen_layout</item>
        <item name="android:layout_marginStart">29dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:src">@drawable/search</item>
        <item name="android:tint">@color/grey</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="YSFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/blackest</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="rvTimeArtistFont">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>